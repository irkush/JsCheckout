<!DOCTYPE html>

<html lang="en" ng-app="checkoutApp">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>title</title>
        <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet"/>
        <script type="text/javascript" src="@Url.Content("~/Scripts/angular.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/angular-resource.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/angularPage/angularTest.js")"></script>
    </head>
    <body ng-controller="OrderRowController">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <table class="table">
                        <tr>
                            <td>Beskrivning</td>
                            <td>Antal</td>
                            <td>Kostnad</td>
                            <td>Moms</td>
                            <td>Totalt</td>
                        </tr>
                        
                        <tr ng-repeat="row in rows">
                            <td>{{row.name}}</td>
                            <td><input type="text" ng-model="row.amount" /></td>
                            <td>{{row.cost}} SEK</td>
                            <td>{{row.vat}} %</td>
                            <td><input type="text" value="{{total(row)}}"/></td>
                             <td ng-show="!$last"><button class="btn btn-danger btn-sm">-</button></td>
                            <td ng-show="$last"><button class="btn btn-info btn-sm">+</button></td>
                        </tr>
                         <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>Totalt:</td>
                            <td>{{allTotals()}}</td>
                            <td></td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10"></div>
                <div class="col-md-2">
                    <button class="btn btn-danger">Cancel</button>
                    <button class="btn btn-primary">OK</button>
                </div>
            </div>
        </div>
    </body>
</html>