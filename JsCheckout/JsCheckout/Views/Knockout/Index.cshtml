<!DOCTYPE html>

<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>title</title>
        <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet"/>
        <script src="../../scripts/knockout-3.0.0.js" type="text/javascript"></script>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <table class="table" >
                        <thead>
                            <tr>
                                <th>Beskrivning</th>
                                <th>Antal</th>
                                <th>Kostnad</th>
                                <th>Moms</th>
                                <th>Totalt</th>
                            </tr>
                        </thead>
                        <tbody data-bind="template: { name: 'itemsTmpl', foreach: items }"></tbody>
                        <script id="itemsTmpl" type="text/html">
                            <tr >
                                <td><input data-bind='value: description' /></td>
                                <td><input data-bind='value: quantity' /></td>
                                <td><input data-bind='value: amount' /></td>
                                <td><input data-bind='value: vat' /></td>
                                <td data-bind="text: total"></td>
                                <td><button class="btn btn-danger btn-sm" data-bind="click: $root.removeItem">-</button></td>
                            </tr>
                        </script>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td ></td>
                            <td data-bind="text: orderTotal"></td>
                            <td><button class="btn btn-info btn-sm" data-bind="click: $root.addItem">+</button></td>
                        </tr>
                    </table>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-10"></div>
                <div class="col-md-2">
                    <button class="btn btn-danger">Cancel</button>
                    <button class="btn btn-primary">OK</button>
                </div>
            </div>
        </div>
    <script src="../../scripts/KnockoutTest.js" type="text/javascript"></script>
    </body>
</html>